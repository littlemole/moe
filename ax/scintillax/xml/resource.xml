<mol:codegen class="ScintillAxGUIBuilder"
               xmlns="urn:mol-codegen"
               xmlns:mol="urn:mol-codegen"
               xmlns:xs="http://www.w3.org/2001/XMLSchema"
			   xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
			   xsi:schemaLocation='urn:mol-codegen resource.xsd'>

  <mol:resources>


    <!-- special resources and stuff we need command identifiers for -->

    <resource  id="IDC_STATIC" value="-1" />


    <!-- dialogs are still created the classic way. here we define only the necessary IDs -->

    <dialogs>
      <!-- scintillax property dialog -->
      <dialog id="IDD_DIALOG_PROP" >
        
        <!-- dialog child control ids  -->
        <controls>
          <control id="IDC_RADIO_UNIX" />
          <control id="IDC_RADIO_WIN32" />
          <control id="IDC_COMBO_ENCODING" />
          <control id="IDC_EDIT_TABWIDTH" />
          <control id="IDC_CHECK_USETABS" />
          <control id="IDC_CHECK_BACKSPACEUNINDENTS" />
          <control id="IDC_CHECK_TABINDENTS" />
          <control id="IDC_CONVERT_BUTTON" />
          <control id="IDC_CHECK_WRITEBOM" />
          <control id="IDC_CHECK_LINE_NUMBERS" />

        </controls>
      </dialog>

      <dialog id="IDD_DIALOG_ENC" >
        <control id="IDC_LIST_ENCODING" />
      </dialog>

    </dialogs>
    <!-- other controls we just define ids for -->

    <controls >

    </controls>

    <!-- typelib to be included in app resources -->
    <typelibs >
      <typelib src="scintillax.tlb" key="1" />
    </typelibs>

    <!-- icon resources to be embedded in app resource-->
    <icons >
      <icon id="IDI_SCINTILLA" src=".\\scintillax.ico"/>
    </icons>

    <!-- bitmap resources, for toolbar bmps optionally a 
        mapping of toolbar button to cmd identifier -->


    <!-- accelerators -->


  </mol:resources>
</mol:codegen>

