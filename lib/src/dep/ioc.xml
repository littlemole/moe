<context namespace="moeTest">

  <value type="std::string" name="greet">
    hello
    world
  </value>
  <value type="std::string" name="greet.de">hullo</value>

<!--
  <vector  name="theVector">
    <item>my "textitext" 1</item>
    <item>my 'textitext' 2</item>
  </vector>
-->
  <list type="std::string" name="theList">

    <item>my "textitext" 1</item>
    <item>my 'textitext' 2</item>

  </list>

<!--
  <map key="std::string" value="std::string" name="theMap">
    <item key="keya">my "textitext" 1</item>
    <item key="keyb">my 'textitext' 2</item>
  </map>
-->
  <singleton type="test::Test" impl="test::Test">
    <constructor>
      <arg type="Logger*" name="theOtherLogger"/>
      <arg type="Drive*" />
      <arg type="Printer*" />
    </constructor>
  </singleton>

  <singleton type="Logger" name="theLogger" >
    <dependencies>
      <dependency member="greeting">
        <value>heya</value>
      </dependency>
    </dependencies>
  </singleton>

  <singleton type="Logger" name="theOtherLogger" >
    <dependencies>
      <dependency member="greeting" name="greet.de"/>
    </dependencies>
  </singleton>
  
  <singleton type="Drive">
    <constructor>
      <arg type="Logger" name="theLogger" />
    </constructor>
  </singleton>

  <!--
  <factory type="std::string" name="greet" value="hello" />
  <factory type="std::string" name="greet.de" value="hullo" />
  -->

  <factory type="int" name="counter" value="0" />

  <factory type="Printer" >
    <dependencies>
      <dependency member="list" name="theList"/>
    </dependencies>    
  </factory>

  <factory type="App">
    <dependencies>
      <dependency member="test" />
    </dependencies>
  </factory>

</context>