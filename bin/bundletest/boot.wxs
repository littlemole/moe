<?xml version="1.0"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi" xmlns:bal="http://schemas.microsoft.com/wix/BalExtension" xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">



  <Bundle Version="$(var.VERSION)" UpgradeCode="5A7C8113-81BD-447C-8469-4E75F562FDFA">

	<Variable Name="APP" Type="string" Value="$(var.APP)"></Variable>

    <util:RegistrySearch 
        Variable="isWebView2Installed"
        Root="HKLM"
        Key="SOFTWARE\WOW6432Node\Microsoft\EdgeUpdate\Clients\{F3017226-FE2A-4295-8BDF-00C3A9A7E4C5}"
        Result="exists" />


    <!-- Contents of the bundle goes here -->

	<BootstrapperApplicationRef
	  Id="WixStandardBootstrapperApplication.HyperlinkLicense">
	  <bal:WixStandardBootstrapperApplication
		LicenseUrl="http://oha7.org/"
		ThemeFile="HyperlinkTheme.xml"
        LocalizationFile="HyperlinkTheme.wxl"
		LogoFile=".\res\logo.jpg" />
	</BootstrapperApplicationRef>
    <Chain>

		<ExePackage SourceFile=".\prereq\MicrosoftEdgeWebview2Setup.exe"  InstallCondition="NOT isWebView2Installed" /> 

<!-- DownloadUrl="http://example.com/?mypackage.exe" -->

		<MsiPackage
			Id="App"
			EnableFeatureSelection="yes"
			DisplayInternalUI="yes"
			SourceFile=".\tmp\$(var.APP).msi"
			Visible="yes"/> 

    </Chain>
  </Bundle>
</Wix>